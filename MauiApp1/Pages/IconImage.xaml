<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Sleepwise.Models"
             x:Class="Sleepwise.Pages.IconImage">
    <HorizontalStackLayout>
        <Image WidthRequest="30" HeightRequest="30">
            <Image.Source>
                <FontImageSource FontFamily="FontAwesomeSolid" Color="Black" Glyph="{Binding InsightIcon}" />
            </Image.Source>
        </Image>
        <Label 
            Text="{Binding InsightString}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </HorizontalStackLayout>
</ContentView>
