<ContentPage
    x:Class="Sleepwise.Pages.StatisticsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Sleepwise.Pages">

    <VerticalStackLayout BackgroundColor="#f5f5f7">
        <FlexLayout
            Grid.Row="1"
            Margin="0,0,0,20"
            AlignItems="Start"
            Direction="Row">

            <Button
                Clicked="HomeButton_Clicked"
                FlexLayout.Grow="1"
                Style="{StaticResource NavigationTopBarButton}"
                Text="Home" />

            <Button
                Clicked="StatsButton_Clicked"
                FlexLayout.Grow="1"
                Style="{StaticResource NavigationTopBarButtonSelected}"
                Text="Stats" />

            <Button
                Clicked="SettingsButton_Clicked"
                FlexLayout.Grow="1"
                Style="{StaticResource NavigationTopBarButton}"
                Text="Settings" />

        </FlexLayout>
    </VerticalStackLayout>
</ContentPage>

