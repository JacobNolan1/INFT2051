<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Sleepwise.Pages.MainPage"
             x:Class="Sleepwise.MainPage"
             Title="MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Main Page" IsVisible="{Binding isMainPage}" />
            <Label Text="Other Page" IsVisible="{Binding isMainPage, Converter={StaticResource InverseBooleanConverter}}" />
            <ContentView Content="{Binding CurrentPage}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
