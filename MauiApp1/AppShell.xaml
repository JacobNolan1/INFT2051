<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sleepwise.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sleepwise"
    xmlns:models="clr-namespace:Sleepwise.Models"
    Shell.FlyoutBehavior="Disabled">
     
    <TabBar>
        <Tab Title="Home">
            <Tab.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid" Glyph="{x:Static models:FontAwesomeIconsSolid.HouseChimney}"/>
            </Tab.Icon>
            <ShellContent
                          ContentTemplate="{DataTemplate local:Pages.HomePage}"/>
        </Tab>
        <Tab Title="Stats">
            <Tab.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid" Glyph="{x:Static models:FontAwesomeIconsSolid.ChartLine}"/>
            </Tab.Icon>
            <ShellContent

                          ContentTemplate="{DataTemplate local:Pages.StatsPage}"/>
        </Tab>
        <Tab Title="Settings">
            <Tab.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid" Glyph="{x:Static models:FontAwesomeIconsSolid.Gears}"/>
            </Tab.Icon>
            <ShellContent
                          ContentTemplate="{DataTemplate local:Pages.SettingsPage}"/>
        </Tab>
    </TabBar>    

</Shell>
